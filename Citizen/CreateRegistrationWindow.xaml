<Window x:Class="Assignment_PRN.CreateRegistrationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Create Registration" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Create Registration" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Registration Type:" FontWeight="Bold"/>
            <ComboBox x:Name="cmbRegistrationType" DisplayMemberPath="TypeName" SelectedValuePath="Id" Margin="0,0,0,10"/>


            <TextBlock Text="Start Date:" FontWeight="Bold"/>
            <DatePicker x:Name="dpStartDate" Margin="0,0,0,10"/>

            <TextBlock Text="End Date:" FontWeight="Bold"/>
            <DatePicker x:Name="dpEndDate" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Submit" Click="SubmitRegistration_Click" Width="100" Margin="5"/>
                <Button Content="Cancel" Click="CloseWindow_Click" Width="80" Margin="5"/>
            </StackPanel>
            <Button Content="Upload Documents" Click="UploadDocuments_Click" Width="150" Margin="5"/>
            <Button Content="Track Request Status" Click="TrackRequest_Click" Width="180" Margin="5"/>

        </StackPanel>
    </Grid>
</Window>
