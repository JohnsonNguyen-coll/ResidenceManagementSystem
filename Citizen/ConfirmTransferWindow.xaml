<Window x:Class="Assignment_PRN.ConfirmTransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_PRN"
        mc:Ignorable="d"
        Title="ConfirmTransferWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Confirm Household Transfer" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Request ID:" FontWeight="Bold"/>
            <TextBox x:Name="txtRequestId" IsReadOnly="True"/>

            <TextBlock Text="Status:" FontWeight="Bold"/>
            <ComboBox x:Name="cbStatus">
                <ComboBoxItem Content="Approved"/>
                <ComboBoxItem Content="Rejected"/>
            </ComboBox>

            <Button Content="Confirm" Click="Confirm_Click" Width="100" Margin="5" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
