<Window x:Class="Assignment_PRN.EditProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Profile" Height="350" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Edit Profile" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtFullName" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10"/>

            <TextBlock Text="Address:" FontWeight="Bold"/>
            <TextBox x:Name="txtAddress" Margin="0,0,0,10"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Save" Click="SaveChanges_Click" Width="100" Margin="5"/>
                <Button Content="Cancel" Click="CloseWindow_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
