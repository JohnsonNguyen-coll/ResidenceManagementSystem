<Window x:Class="Assignment_PRN.ProfileWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Profile" Height="300" Width="400">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Profile" FontSize="20" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBlock Text="{Binding FullName}" Margin="0,0,0,10"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Email}" Margin="0,0,0,10"/>

            <TextBlock Text="Address:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Address}" Margin="0,0,0,10"/>

            <TextBlock Text="Role:" FontWeight="Bold"/>
            <TextBlock Text="{Binding Role}" Margin="0,0,0,10"/>

            <Button Content="Close" Click="CloseWindow" Width="100" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
