<Window x:Class="Assignment_PRN.SubmitHouseholdTransferWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Assignment_PRN"
        mc:Ignorable="d"
        Title="SubmitHouseholdTransferWindow" Height="450" Width="800">
    <Grid>
        <StackPanel Margin="20">
            <TextBlock Text="Household Transfer Request" FontSize="18" FontWeight="Bold" HorizontalAlignment="Center"/>

            <TextBlock Text="Full Name:" FontWeight="Bold"/>
            <TextBox x:Name="txtFullName" Margin="0,0,0,10" IsReadOnly="True"/>

            <TextBlock Text="Email:" FontWeight="Bold"/>
            <TextBox x:Name="txtEmail" Margin="0,0,0,10" IsReadOnly="True"/>

            <TextBlock Text="Current Address:" FontWeight="Bold"/>
            <TextBox x:Name="txtCurrentAddress" Margin="0,0,0,10"/>

            <TextBlock Text="New Address:" FontWeight="Bold"/>
            <TextBox x:Name="txtNewAddress" Margin="0,0,0,10"/>

            <TextBlock Text="Reason for Transfer:" FontWeight="Bold"/>
            <TextBox x:Name="txtReason" Margin="0,0,0,10" Height="60" TextWrapping="Wrap" AcceptsReturn="True"/>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="Submit" Click="SubmitTransfer_Click" Width="100" Margin="5"/>
                <Button Content="Cancel" Click="CloseWindow_Click" Width="80" Margin="5"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
